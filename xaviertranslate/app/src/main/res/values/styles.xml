<resources>

    <style name="TextAppearanceXLarge" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
    </style>

    <style name="TextAppearanceLarge" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TextAppearanceMedium" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="TextAppearanceSmall" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearanceMedium</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
